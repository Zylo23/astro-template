---
import { badgeVariants } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { features } from '@/data/features'
import Layout from '@/layouts/Layout.astro'
import { cn } from '@/lib/utils'
---

<Layout title="Astro Template">
	<main class="space-y-32">
		<section id="hero" class="container flex min-h-svh items-center justify-between">
			<div class="flex h-full flex-col space-y-12 p-2 pr-20">
				<h3 class="text-base font-semibold leading-7 text-primary">pyyupsk/astro-template</h3>
				<h1
					class="mt-4 max-w-[36rem] text-4xl font-extrabold tracking-tight text-foreground sm:text-7xl xl:max-w-[43.5rem]"
				>
					Astro <span class="bg-gradient-to-r from-primary to-primary/70 bg-clip-text text-transparent">template</span>
					<br />
					for your next project
				</h1>
				<p class="mt-4 max-w-xl text-lg text-muted-foreground">
					A solid starting point for developing modern, fast, and SEO-friendly websites using Astro, TypeScript,
					TailwindCSS, and other popular tools. Clone the repository and start your development journey today!
				</p>
				<div class="mt-6 flex space-x-4">
					<a href="https://github.com/pyyupsk/astro-template">
						<Button>View on GitHub</Button>
					</a>
					<a href="#features">
						<Button variant="outline">Features</Button>
					</a>
				</div>
			</div>
			<div class="flex h-full flex-1 flex-col justify-center">
				<div class="no-container h-[400px] w-full border border-transparent">
					<div class="group relative h-full w-full">
						<div class="absolute left-0 top-0 h-72 w-72 animate-blob mix-blend-plus-lighter">
							<div
								class="h-72 w-72 rounded-full bg-primary opacity-70 mix-blend-plus-lighter blur-xl filter transition-opacity duration-1000 group-hover:opacity-100"
							>
							</div>
						</div><div class="delay-2000 absolute right-0 top-8 h-72 w-72 animate-blob mix-blend-plus-lighter">
							<div
								class="h-72 w-72 rounded-full bg-primary opacity-70 mix-blend-plus-lighter blur-xl filter transition-opacity duration-1000 group-hover:opacity-100"
							>
							</div>
						</div><div class="delay-4000 absolute -bottom-16 left-28 h-72 w-72 animate-blob mix-blend-plus-lighter">
							<div
								class="h-72 w-72 rounded-full bg-ring opacity-70 mix-blend-plus-lighter blur-xl filter transition-opacity duration-1000 group-hover:opacity-100"
							>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section id="features" class="container flex flex-col justify-center">
			<div class={cn(badgeVariants(), 'mx-auto')}>Features</div>
			<div class="flex justify-center py-12 text-center">
				<h1 class="apply-font-heading text-6xl font-bold tracking-tight">
					More than just a static site
					<span class="bg-gradient-to-r from-primary to-primary/70 bg-clip-text text-transparent"> generator </span>
				</h1>
			</div>
			<div class="space-y-6">
				<div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
					{
						features.map((feature) => (
							<div class="w-full rounded-md border bg-card p-6">
								<div class="flex items-center pb-4">
									<h1 class="apply-font-heading mr-3 rounded-md border p-2 text-xl">{feature.icon}</h1>
									<h2 class="apply-font-heading text-lg font-semibold">{feature.title}</h2>
								</div>
								<p class="text-sm leading-5 text-muted-foreground">{feature.description}</p>
							</div>
						))
					}
				</div>
			</div>
		</section>

		<footer class="flex items-center justify-center border-t py-4">
			<div class="text-center text-muted-foreground">
				<p>
					Thank you for using the Astro Template! If you have any questions or feedback, feel free to open an issue or
					submit a pull request. Happy coding! ðŸš€
				</p>
			</div>
		</footer>
	</main>
</Layout>
